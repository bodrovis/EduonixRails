<div class="card mt-4">
  <div class="card-block">
    <div class="row">
      <div class="col-md-2">
        <%= gravatar_for user: user, opts: {class: 'rounded-circle img-fluid mx-auto d-block'} %>
      </div>
      <div class="col-md-10">
        <h4 class="card-title text-md-left text-center"><%= user.name %></h4>
        <h6 class="card-subtitle text-md-left text-center">
          <%= t 'enrollments.common.enrolled_ago',
                time: time_ago_in_words(user.enrollment_at(event).created_at) %>
        </h6>
      </div>
    </div>
  </div>
</div>
