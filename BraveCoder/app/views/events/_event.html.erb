<div class="card mb-4" id="<%= dom_id event %>">
  <div class="card-block">
    <h4 class="card-title">
      <%= link_to event.title, category_event_path(event.category, event) %>
      <% if event.participant? current_user %>
        <span class="badge badge-info"><%= t('events.badges.enrolled') %></span>
      <% end %>
    </h4>
    <h6 class="card-subtitle mb-2 text-muted">
      <%= "#{t('events.badges.organizer')} #{event.owner.name}" %></h6>

    <p class="card-text lead"><%= event.description %></p>

    <dl>
      <dd><%= event.starts_at %> &mdash; <%= event.ends_at %></dd>
    </dl>

    <% if event.owned_by? current_user %>
      <%= link_to t('common.buttons.edit'), edit_category_event_path(event.category, event), class: 'card-link btn btn-secondary btn-sm' %>
      <%= link_to t('common.buttons.remove'), category_event_path(event.category, event), class: 'card-link btn btn-danger btn-sm',
                  data: {method: :delete, confirm: t('common.dialog.you_sure'), remote: true} %>
    <% end %>
  </div>
</div>