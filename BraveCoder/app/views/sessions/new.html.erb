<% title 'Log In' %>
<% at_page('log in') %>

<%= form_for :session, url: sessions_path, html: {id: 'new_session'} do |f| %>
  <div class="form-group row">
    <div class="col-2">
      <%= f.label :email, class: 'col-form-label' %>
    </div>
    <div class="col-10">
      <%= f.email_field :email, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-2">
      <%= f.label :password, class: 'col-form-label' %>
    </div>
    <div class="col-10">
      <%= f.password_field :password, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="offset-2 col-10">
      <%= f.submit 'Log In!', class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
<% end %>