<% if object.errors.any? %>
  <div class="alert alert-danger">
    <strong><%= "#{t('common.errors', count: object.errors.count)} #{t('common.found')}:" %></strong>
    <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>